@model Business_Tracking.Entities.ORM.Concrete.AppUser

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="bg-light border-right" id="sidebar-wrapper">
    <img src="~/wwwroot/img/@Model.Image" />
    <div class="list-group list-group-flush">
        <a asp-area="Admin" asp-controller="Jobs" asp-action="Index" class="list-group-item list-group-item-action bg-light">Görev İşlemleri</a>
        <a asp-area="Admin" asp-controller="Urgency" asp-action="Index" class="list-group-item list-group-item-action bg-light">Aciliyet İşlemleri</a>
        <a asp-area="Admin" asp-controller="JobsDuty" asp-action="Index" class="list-group-item list-group-item-action bg-light">Görev Atama İşlemleri</a>
        <a asp-area="Admin" asp-controller="Notifications" asp-action="Index" class="list-group-item list-group-item-action bg-light position-relative">

            @if (ViewBag.notifications > 0)
            {
                <sub class="badge badge-success position-absolute mb-1 mr-3">@ViewBag.notifications</sub>

            }
            Bildirimler
        </a>


        <a asp-area="Admin" asp-controller="Profile" asp-action="Index" class="list-group-item list-group-item-action bg-light">Profile</a>
        <a asp-area="" asp-controller="Home" asp-action="Logout" class="list-group-item list-group-item-action bg-light">Çıkış Yap</a>
    </div>
</div>
