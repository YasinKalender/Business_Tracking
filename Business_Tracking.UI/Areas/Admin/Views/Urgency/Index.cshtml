@model List<Urgency>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@Html.ActionLink("Aciliyet Ekle","UrgencyAdd","Urgency",new {@class="btn btn-primary" })

@if (Model.Count > 0)
{

    <table class="table table-bordered">


        <thead>

            <tr>
                <th>Aciliyet İsmi</th>
                <th></th>


            </tr>

        </thead>

        <tbody>

            @foreach (var item in Model)
            {

                <tr>

                    <td>@item.Name</td>
                    <td><a asp-action="UrgencyUpdate" asp-route-id="@item.ID" class="btn btn-primary">Update</a></td>

                </tr>

            }

        </tbody>


    </table>


}

else
{
    <p class="lead text-center">Aciliyet durumunuz yoktur</p>
}
