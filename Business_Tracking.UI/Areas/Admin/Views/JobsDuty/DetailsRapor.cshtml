@model JobsListDto
@{
    ViewData["Title"] = "DetailsRapor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details Rapor</h1>

@if (Model.Rapors.Count>0)
{


    <table class="table table-bordered">
        <tr>

            <th colspan="2">@Model.AppUser.FirstName personeliniz @Model.Name üstünde yazdığı rapolar</th> 
        </tr>

        <tr>

        <th>Tanım</th>
        <th>Detay</th>

        </tr>

        @foreach (var item in Model.Rapors)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Details</td>

            </tr>
        }



    </table>

}

else
{

  <div class="border border-dark">

      @Model.AppUser.FirstName personeliniz şu anda @Model.Name üstünde çalışıyor. Herhangi bir rapor yazmamış

  </div>

}

