@model RaporsAddViewModel
@{
    ViewData["Title"] = "AddRapor";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<h1>Add Rapor</h1>

@using (Html.BeginForm())
{

    <div class="text-center">

        <p>@Model.Jobs.Name</p>
        <p>@Model.Jobs.Description</p>
        <p>@Model.Jobs.Urgency.Name</p>


    </div>


    <input type="hidden" asp-for="JobsID" />


    <div class="form-group">

        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" class="form-control" />


    </div>

    <div class="form-group">

        <label asp-for="Details"></label>
        <input type="text" asp-for="Details" class="form-control" />


    </div>

    <button type="submit" class="btn btn-primary">Rapor ekle</button>








}

